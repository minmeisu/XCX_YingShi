/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*推荐电影详情页的视频大小样式 */
.video {
  height: 400rpx;
}
.video video {
  width: 100%;
  height: 400rpx;
}
.video-tou image{
  width: 17px;
  height: 17px;
}
.video{height: 400rpx;}
.video video{width: 100%; height: 400rpx;}
.video-tou image{width: 17px; height: 17px;}
.video-list{display: flex; justify-content: space-between; height: 55rpx; line-height: 55rpx;
            font-size: 18px; margin: 10rpx;}
.video-tou{display: flex; align-items: center;}      
.video-forward image{width: 25px; height: 25px;}      
.video-forward{display: flex; justify-content: flex-end;}
.video-forward view{margin: 20rpx;}
.video-forward button{border: 0}

/*电影详情页的样式  */
/*上边的简介  */
.video-brief{
  margin: 20rpx 0;
}
.video-brief image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.scroll-top{
  border-top: 1px solid #fff;
  border-bottom: 1px solid white;
  padding: 30rpx 0;
}
.scroll-view{
  width: 100%;
  white-space: nowrap;
}
.scroll-view .scroll-view-item{
  width: 70px;
  display: inline-block;
  text-align: center;
}
.scroll-view-item text{
  font-size: 14px;
}
/*电影简介下边的内容  */
.duction{margin: 10rpx;}         
.duction text{font-size: 18px;}
.duction-list text{font-size: 16px; line-height: 1.4}
.duction-list{padding: 20rpx 0;}

/*留言内容  */
.message{margin: 40rpx 10rpx;}
.message-text{font-size: 15px; text-align: center}
.message image{width: 30px; height: 30px; border-radius: 5px;}
.user{height: 30px; display: flex;}
.user text{font-size: 15px;}
.user view{padding-right: 4px;}
.user-good{margin-top: 5px;}
.user-good text{font-size: 14px;}
.user-two{border-bottom: 1px solid #f4f4f4; padding-bottom: 15px; margin-bottom: 30px;}

/* 底部的电影评论部分 */
.comment{position: fixed; bottom: 0; left: 0; right: 0; background: white; padding: 10px 4px;}
.placeholder{font-size: 14px; width: 100%;}

/*透明背景  */
.yinyin{background: rgba(0,0,0,0.8);
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        }

 /*多行输入框  */
 .xunfu{position: fixed; top: 0; width: 100%; z-index: 9999;}
 .xunfu textarea{width: 100%; background-color: white; color: black;}
 .xunfu button{float: right; margin-top: 5px;}

 /*电影故事  */
 .story{
   display: flex;
   height: 200rpx;
   overflow: hidden;
   padding: 10rpx 0;
   justify-content: space-between;
   border-bottom: 1px solid #e8e8e8;
 }
 .story-image{
    width: 100%; 
   height: 200rpx;
   margin-left: 5rpx;
   margin-right: 20rpx; 
 }
  .story-image image{
    width: 100%;
    display: block;
  }
   .story-list{width: 100%; margin-right: 5rpx; position: relative;} 
  .story-move{display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp:2;
            overflow: hidden;
            font-size: 17px;
            font-weight: bold;}
.story-time{font-size: 15px; position: absolute; bottom: 0; left: 0;}     