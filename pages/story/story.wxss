.loading{position: fixed; top: 0; bottom: 0; left: 0; right: 0;
        background: white; z-index: 99;}

.loading-view text{display: inline-block;
                  width: 10rpx;
                  border-radius: 4rpx;
                  background: lightgreen;
                  margin: 0 8rpx;
                  animation: load 1s ease infinite;}        

.loading-view{
              /* background: firebrick; */
              display: flex;
              justify-content: center;
              align-items: center;
              width: 100px;
              height: 100px;
              position: fixed;
              top: 0;
              left: 0;
              right: 0;
              bottom: 0;
              margin: auto;}          

  /* 开始动画效果 */
  @keyframes load{
        0%,100%{
          height: 20rpx;
          background: lightgreen;
        }
        50%{
          height: 40rpx;
          margin: -20rpx 8rpx;
          background: lightblue;
        }
    
      }

      .loading-view text:nth-child(2){
          animation-delay: 0.2s;
        }
      .loading-view text:nth-child(3){
          animation-delay: 0.4s;
        }  
      .loading-view text:nth-child(4){
          animation-delay: 0.6s;
        }  
      .loading-view text:nth-child(5){
          animation-delay: 0.8s;
        }  