<!--pages/personal/personal.wxml-->
<!--授权登录  -->
<view>
  <view  class='userinfo'>
    <button type='primary' wx:if="{{hasuserinfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="login">授权登录</button>
  <block wx:else>
   <image     
    class='userinfo-avatar' wx:if="{{avatarUrl.length>0}}" src='{{avatarUrl}}'></image>
   <text class='userin-nickname'>{{nickName}}</text>
  </block>
  </view>
</view>

